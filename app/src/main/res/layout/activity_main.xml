<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnPrivacidad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="390dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Privacidad y protección de datos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnDelitos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="521dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Delitos y ciberseguridad"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnDocumento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="390dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Documento electrónico y firma digital"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnDefensa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="260dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Defensa del consumidor en internet"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnQuees"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="521dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Qué es un delitos informático"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnMarcas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="260dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Marcas comerciales y propiedad intelectual"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnNombres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="485dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="130dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Nombres de dominio y gobernanza de internet"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34" />

    <Button
        android:id="@+id/btnRegimen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="485dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="130dp"
        android:background="#900211FF"
        android:elevation="10px"
        android:text="Regimen de internet y telecomunicaciones"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.34"

        />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/baseline_menu_24"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:layout_constraintWidth_percent="0.18"
        />

    <Button
        android:id="@+id/btnContacto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Contacto"
        app:icon="@drawable/baseline_mail_24"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.4"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnBot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="621dp"
        android:background="@drawable/chat_bot_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="-10px"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/btnContacto"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.84"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="1"

        app:srcCompat="@drawable/istockphoto" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>